generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]
  subscriptions UserSubscription[]
  tasks         Task[]
  categories    Category[]
  labels        Label[]
  stripeCustomerId String?  // Stripe customer id (cus_...)

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([identifier])
  @@map("verification")
}

model SubscriptionPlan {
  id          String   @id @default(cuid())
  name        String   // "FREE", "PRO"
  price       Int      // in cents (0, 500)
  maxTasks    Int      // 10, -1 for unlimited
  features    Json     // Store feature flags
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userSubscriptions UserSubscription[]
  
  @@unique([name])
  @@map("subscription_plan")
}

model UserSubscription {
  id                String    @id @default(cuid())
  userId            String
  planId            String
  // Stripe references
  stripeSubscriptionId String? @unique // ‚Üê add @unique
  stripePriceId        String? // Price id used for this subscription (price_...)

  status            String   // , "active", "cancelled", "expired"
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelledAt        DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  user         User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan         SubscriptionPlan  @relation(fields: [planId], references: [id])
  
  @@index([userId])
  @@unique([userId, status])
  @@index([status])
  @@map("user_subscription")
}

model Task {
  id            String    @id @default(cuid())
  title         String  
  description   String
  dueDate       DateTime
  reminderDate  DateTime? // For custom reminder dates (PRO feature)
  categoryId    String?   // Category reference (PRO feature)
  isCompleted   Boolean   @default(false)
  userId        String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category      Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  notifications EmailNotification[]
  taskLabels    TaskLabel[]
  
  @@index([userId])
  @@index([dueDate])
  @@index([reminderDate])
  @@index([categoryId])
  @@index([userId, isCompleted]) // For user task filtering
  @@index([userId, dueDate]) // For user's due tasks
  @@index([userId, createdAt]) // For user's recent tasks
  @@map("task")
}

model EmailNotification {
  id        String   @id @default(cuid())
  taskId    String
  type      String   // "CUSTOM_REMINDER", "DUE_DATE_REMINDER"
  sentAt    DateTime @default(now())
  scheduledFor DateTime
  
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  @@index([taskId])
  @@index([scheduledFor])
  @@index([type, scheduledFor]) // For scheduled email processing
  @@map("email_notification")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  color       String   @default("#3B82F6") // Hex color code
  description String?
  userId      String   // User-specific categories
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks       Task[]
  
  @@unique([userId, name]) // Unique category name per user
  @@index([userId])
  @@map("category")
}

model Label {
  id          String   @id @default(cuid())
  name        String
  color       String   @default("#10B981") // Hex color code
  userId      String   // User-specific labels
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskLabels  TaskLabel[]
  
  @@unique([userId, name]) // Unique label name per user
  @@index([userId])
  @@map("label")
}

model TaskLabel {
  id      String @id @default(cuid())
  taskId  String
  labelId String
  createdAt DateTime @default(now())
  
  task    Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  label   Label  @relation(fields: [labelId], references: [id], onDelete: Cascade)
  
  @@unique([taskId, labelId]) // Prevent duplicate labels on same task
  @@index([taskId])
  @@index([labelId])
  @@map("task_label")
}
